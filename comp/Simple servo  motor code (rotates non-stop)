#include <Servo.h>

Servo myServo;   // create servo object

void setup() {
  myServo.attach(9);   // attach servo signal to pin 9
}

void loop() {

  // Move from 0째 to 180째
  for (int angle = 0; angle <= 180; angle++) {
    myServo.write(angle);
    delay(15);       // speed of movement
  }

  // Move from 180째 back to 0째
  for (int angle = 180; angle >= 0; angle--) {
    myServo.write(angle);
    delay(15);
  }
}
